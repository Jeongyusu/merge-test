			<div class="content">
				<div class="container-fluid">
					<div class="row">
						<div class="col-md-12">
							<div class="card">
								<div class="content table-responsive table-full-width">
									{{! 테이블 자리 }}
									<div id="page-wrapper">
										<div class="container-fluid">
											<div class="panel panel-default">
												<div class="panel-heading">
													<h4>현재 쿠폰 목록</h4>
												</div>
												<!-- /.panel-heading -->
												<div class="panel-body">
													<div class="table-responsive">
														<table class="table table-striped table-bordered table-hover" id="custom-table">
															<thead>
																<tr>
																	<th class="two">couponName</th>
																	<th class="two">couponNumber</th>
																	<th class="one">reduceAmount</th>
																	<th class="one">couponCreatedAt</th>
																	<th class="one">couponExpiredAt</th>
																	<th class="one">couponUse</th>
																	<th class="one">isExpired</th>
																</tr>
															</thead>
															<tbody>
																{{# couponListDTOs}}
																	<tr class="odd gradeX">
																		<td class="two" onclick=openCouponDetail({{id}})>{{couponName}}</td>
																		<td class="one">{{couponNumber}}</td>
																		<td class="one">{{reduceAmount}}</td>
																		<td class="one">{{couponCreatedAt}}</td>
																		<td class="one">{{couponExpiredAt}}</td>
																		<td class="one">{{couponCount}}</td>
																		<td class="one">{{isExpired}}</td>
																	</tr>
																{{/ couponListDTOs}}
															</tbody>
														</table>
														<button type="button" class="btn btn-info btn-fill pull-right" onclick="onSave()">
															쿠폰 등록
														</button>
													</div>
													<!-- /.table-responsive -->
												</div>
												<!-- /.panel-body -->
											</div>
											<!-- /.row -->
											<div class="panel panel-default">
												<div class="panel-heading">
													<h4>만료 쿠폰 목록</h4>
												</div>
												<!-- /.panel-heading -->
												<div class="panel-body">
													<div class="table-responsive">
														<table class="table table-striped table-bordered table-hover" id="custom-table">
															<thead>
																<tr>
																	<th class="two">couponName</th>
																	<th class="two">couponNumber</th>
																	<th class="one">reduceAmount</th>
																	<th class="one">couponCreatedAt</th>
																	<th class="one">couponExpiredAt</th>
																	<th class="one">couponUse</th>
																	<th class="one">isExpired</th>
																</tr>
															</thead>
															<tbody>
																{{# eCouponListDTOs}}
																	<tr class="odd gradeX">
																		<td class="two" onclick=openCouponDetail({{id}})>{{couponName}}</td>
																		<td class="one">{{couponNumber}}</td>
																		<td class="one">{{reduceAmount}}</td>
																		<td class="one">{{couponCreatedAt}}</td>
																		<td class="one">{{couponExpiredAt}}</td>
																		<td class="one">{{couponCount}}</td>
																		<td class="one">{{isExpired}}</td>
																	</tr>
																{{/ eCouponListDTOs}}
															</tbody>
														</table>
													</div>
													<!-- /.table-responsive -->
												</div>
												<!-- /.panel-body -->
											</div>
											<!-- /.row -->
										</div>
										<!-- /.container-fluid -->
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>


			<script>

				function onSave() {
					location.href = "/admin/coupon/save";
				}

				function openCouponDetail(couponId) {
					var couponDetailUrl = "/admin/coupon/detail/" + couponId;
					// 새 창을 열기
					window.open(couponDetailUrl, "couponDetailWindow", "width=1000,height=1200,resizable=no");
				}

			</script>

