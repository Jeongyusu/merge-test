      <div class="container-nCenter pa-15">
        <div class="card login-panel panel panel-default height-700">

          <div class="panel-heading">
            <h3 class="panel-title">공지 작성</h3>
          </div>
          <div class="content">
            <form action="/admin/notice/save" method="post" enctype="application/x-www-form-urlencoded">
              <div class=" row">
                <div class="col-md-12">
                  <div class="form-group">
                    <label>Notice title</label>
                    <input type="text" id="noticeTitle" class="form-control" name="noticeTitle" placeholder="공지 제목"
                      value="" required />
                  </div>
                </div>
              </div>

              <div class=" row">
                <div class="col-md-6 pull-right">
                  <div class="form-group">
                    <label>Notice type</label>
                    <select class="form-control required" name="noticeType" id="noticeType">
                      <option>안내</option>
                      <option>시스템</option>
                      <option>이벤트</option>
                      <option>가격인하공지</option>
                      <option>가격인상공지</option>
                    </select>
                  </div>
                </div>
              </div>

              <div class=" row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label>Notice Content</label>
                    <textarea rows="10" cols="50" style="width: 570px; height: 350px; resize: none;"
                      placeholder="공지 내용을 입력하세요" name="noticeContent" id="noticeContent" required></textarea>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <button type="submit" class="btn btn-info btn-fill pull-right">
                      등록
                    </button>
                  </div>
                </div>
              </div>
            </form>

          </div>
        </div>
